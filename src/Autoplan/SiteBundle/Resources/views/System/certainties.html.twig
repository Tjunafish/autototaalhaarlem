{%  extends "AutoplanSiteBundle::layout.html.twig" %}

{% block content %}
    <section id="small-visual" class="visible-sm visible-md visible-lg">
        <div id="carousel-page" class="carousel slide" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
					<div class="visual-bg">
                    <img src="/images/slider/slide4.jpg" alt="">
					</div>
                </div>
            </div>

        </div>
    </section>
    <main id="article">
		<section id="naw-home" class="bg-blue visible-sm visible-md visible-lg">
			<div class="container">
				<div class="row">
                    {{ textBlock("contact-bedrijfsnaam") | raw}} | <span class="visible-sm visible-md visible-lg">{{ textBlock("contact-adres") | raw}} | {{ textBlock("contact-postcode") | raw}} {{ textBlock("contact-plaats") | raw}} |</span> T. {{ textBlock("contact-telefoon") | raw }} | <a href="mailto:{{ textBlock("contact-email") | raw}}">{{ textBlock("contact-email") | raw}}</a>
				</div>
			</div>
		</section>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-7 col-md-8 col-lg-8">
					<h1 class="txt-orange paddingleft110">Onze zekerheden</h1>
					<ul id="certaintylist">
						<li id="icon-keuze">Ruime keuze, scherpe prijzen</li>
						<li id="icon-eigenaar">Van de eerste eigenaar</li>
						<li id="icon-conditie">Topconditie</li>
						<li id="icon-historie">Onderhoudshistorie inzichtelijk</li>
						<li id="icon-inruil">Inruil mogelijk</li>
						<li id="icon-garantie">Garantie</li>
					</ul>
				</div>
				<div class="col-xs-12 col-sm-5 col-md-4 col-lg-4" id="bestday-banner-small">
					<div id="carousel-banner" class="carousel slide" data-ride="carousel">
						<!-- Wrapper for slides -->
						<div class="carousel-inner">

                            {% for banner in banners %}
                                <div class="item {% if loop.first %}active{% endif %}">
                                    <div class="holder">
                                        <a href="{{ banner.url }}">
                                            <img src="{{ vich_uploader_asset(banner, 'image')}}" alt="{{ banner.title }}" class="img-responsive">
                                        </a>
                                    </div>

                                </div>
                            {% endfor %}
							{#<div class="item active">
								<div class="holder">
									<img src="/images/img-zekerheden.jpg" class="img-responsive" alt="Onze Zekerheden">
								</div>
								<!--<div class="caption">
									Hoe het kan? Alleen met AutoPlan
								</div>-->
							</div>#}
							{#<div class="item">
								<div class="holder">
									<img src="/images/img-banner.jpg" alt="AutoPlan">
								</div>
								<div class="caption">
									Alleen met AutoPlan
								</div>
							</div>#}
						</div>
					</div>
					<a href="{{ path('site_offerings_ash') }}" class="btn bg-orange">Bekijk onze voorraad</a>
				</div>
            </div>
        </div>
    </main>
{% endblock %}

{% block footer_scripts %}
<script type="text/javascript">
	$(function(){
		$('#carousel-banner').carousel({
			interval: 9000,
			wrap: true
		});
	});
</script>
{% endblock %}