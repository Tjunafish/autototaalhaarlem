{% extends 'AutoplanCMSBundle::layout.html.twig' %}

{% block content %}

    <ol class="breadcrumb bc-3">
        <li>
            <a href="{{ path('admin_dashboard') }}"><i class="entypo-home"></i>Home</a>
        </li>
        <li>
            <a href="{{ path('admin_newsletter_subscribers') }}">Newsletter Subscribers</a>
        </li>
        <li class="active">

            <strong>Import subscribers</strong>
        </li>
    </ol>

    <h2>Import subscribers</h2>


    <form role="form" class="form-horizontal form-groups-bordered" action="{{ path('admin_newsletter_subscribers_import') }}" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">

                    <div class="panel-heading">
                        <div class="panel-title">
                            Subscribers
                        </div>
                    </div>

                    <div class="panel-body">

                        <div class="form-group">
                            <label class="control-label col-sm-3 required" for="autoplan_newsletter_subscription_file">CSV File</label>
                            <div class="col-sm-5">
                                <input type="file" id="autoplan_newsletter_subscription_file" name="csv_file" required="required" class="form-control span8 file2" />


                                <p style="margin-top: 15px;">The CSV to be imported must be the format <code>name,email</code> per each line in this exact order</p>

                                <p>* By default, the newly inserted email addresses will be active and the inserted date will be set to today</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-5">
                                <button type="submit" class="btn btn-default">Import</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>

{% endblock %}
