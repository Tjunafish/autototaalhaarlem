{% extends 'AutoplanCMSBundle::layout.html.twig' %}

{% block content %}

    <ol class="breadcrumb bc-3">
        <li>
            <a href="{{ path('admin_dashboard') }}"><i class="entypo-home"></i>Home</a>
        </li>
        <li>
            <a href="{{ path('admin_text') }}">Teksten</a>
        </li>
        <li class="active">

            <strong>Tekst bewerken</strong>
        </li>
    </ol>

    <h2>Pagina bewerken</h2>


    <form role="form" class="form-horizontal form-groups-bordered" action="{{ path('admin_text_edit', {'id': text.id}) }}" method="post" {{ form_enctype(form) }}>

        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">

                    <div class="panel-heading">
                        <div class="panel-title">
                            Tekst
                        </div>
                    </div>

                    <div class="panel-body">
                        {{ form_row(form.textKey) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.content) }}

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-5">
                                <button type="submit" class="btn btn-default">Opslaan</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_widget(form._token) }}

    </form>

{% endblock %}