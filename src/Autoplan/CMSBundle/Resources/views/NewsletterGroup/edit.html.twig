{% extends 'AutoplanCMSBundle::layout.html.twig' %}

{% block content %}

    <ol class="breadcrumb bc-3">
        <li>
            <a href="{{ path('admin_dashboard') }}"><i class="entypo-home"></i>Home</a>
        </li>
        <li>
            <a href="{{ path('admin_newsletter_groups') }}">Subscriber Groups</a>
        </li>
        <li class="active">

            <strong>Group Edit</strong>
        </li>
    </ol>

    <h2>{{ entity.name }}</h2>

    <form role="form" class="form-horizontal form-groups-bordered" action="{{ path('admin_newsletter_group_edit', {'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>

        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">

                    <div class="panel-heading">
                        <div class="panel-title">
                            Edit Subscriber Group
                            <br/>
                        </div>
                    </div>

                    <div class="panel-body">
                        {{ form_row(form.name) }}
                        {{ form_row(form.subscribers) }}

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-5">
                                <button type="submit" class="btn btn-default">Save</button>
                                <button type="button" class="btn btn-black cancel tweaked-margin-left" data-url="{{ path('admin_newsletter_groups') }}">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_widget(form._token) }}

    </form>

{% endblock %}
