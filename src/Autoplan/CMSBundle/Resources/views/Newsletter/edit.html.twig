{% extends 'AutoplanCMSBundle::layout.html.twig' %}

{% block content %}

    <ol class="breadcrumb bc-3">
        <li>
            <a href="{{ path('admin_dashboard') }}"><i class="entypo-home"></i>Home</a>
        </li>
        <li>
            <a href="{{ path('admin_newsletters') }}">Newsletters</a>
        </li>
        <li class="active">

            <strong>Newsletter Edit</strong>
        </li>
    </ol>

    <h2>{{ entity.title }}</h2>

    <div class="panel panel-primary" data-collapsed="0">

        <div class="panel-body">
            <a href="{{ path('admin_newsletter_send', {id: entity.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                <i class="entypo-upload"></i>
                Send
            </a> <small>- Sends you to a new page</small>

            <a href="{{ path('admin_newsletter_delete', {id: entity.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left pull-right">
                <i class="entypo-cancel"></i>
                Delete
            </a>

            <a href="{{ path('newsletter_preview', {slug: entity.slug}) }}" class="btn btn-default btn-sm btn-icon icon-left pull-right tweaked-margin-right" target="_blank">
                <i class="entypo-eye"></i>
                Preview
            </a>
        </div>
    </div>

    <form role="form" class="form-horizontal form-groups-bordered" action="{{ path('admin_newsletter_edit', {'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>

        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">

                    <div class="panel-heading">
                        <div class="panel-title">
                            Edit Newsletter <em class="light">*</em>
                            <br/>
                            <em class="light">* If you modify something, please save it first and then preview/send it</em>
                        </div>
                    </div>

                    <div class="panel-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.subject) }}
                        {{ form_row(form.text) }}
                        {{ form_row(form.cars) }}

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-5">
                                <button type="submit" class="btn btn-default">Save</button>
                                <button type="button" class="btn btn-black cancel tweaked-margin-left" data-url="{{ path('admin_newsletters') }}">Cancel</button>
                                <br />
                                <small>You can preview it or send it after you submit the form</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_widget(form._token) }}

    </form>

{% endblock %}
