{% extends 'AutoplanCMSBundle::layout.html.twig' %}

{% block content %}

    <ol class="breadcrumb bc-3">
        <li>
            <a href="{{ path('admin_dashboard') }}"><i class="entypo-home"></i>Home</a>
        </li>
        <li>
            <a href="{{ path('admin_newsletters') }}">Newsletters</a>
        </li>
        <li class="active">

            <strong>Add Newsletter</strong>
        </li>
    </ol>

    <h2>Add Newsletter</h2>


    <form role="form" class="form-horizontal form-groups-bordered" action="{{ path('admin_newsletter_new') }}" method="post" {{ form_enctype(form) }}>

        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-primary" data-collapsed="0">

                    <div class="panel-heading">
                        <div class="panel-title">
                            Newsletter
                        </div>
                    </div>

                    <div class="panel-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.subject) }}
                        {{ form_row(form.text) }}
                        {{ form_row(form.cars) }}

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-5">
                                <button type="submit" class="btn btn-default">Save</button>
                                <br />
                                <small>You can preview it or send it after you submit the form</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_widget(form._token) }}

    </form>

{% endblock %}
