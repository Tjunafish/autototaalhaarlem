{% extends 'AutoplanCMSBundle::layoutBasic.html.twig' %}

{% block content %}
    <div class="login-container">

        <div class="login-header login-caret">

            <div class="login-content">

                <a href="{{ path('admin_dashboard') }}" class="logo">
                    <img src="/img/autoplan.png" width="120" alt="" />
                </a>

                <p class="description">Log hier in voor het CMS!</p>

                <!-- progress bar indicator -->
                <div class="login-progressbar-indicator">
                    <h3>43%</h3>
                    <span>Inloggen...</span>
                </div>
            </div>

        </div>

        <div class="login-progressbar">
            <div></div>
        </div>

        <div class="login-form">

            <div class="login-content">

                <div class="form-login-error">
                    <h3>Onbekende combinatie gebruikersnaam/wachtwoord</h3>
                    <p>Vul de juiste inloggevens in om verder te gaan.</p>
                </div>

                <form action="{{ path('admin_login_check') }}" method="post" role="form" id="form_login">

                    <div class="form-group">

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-user"></i>
                            </div>

                            <input type="text" class="form-control" name="_username" id="username" placeholder="E-mailadres" autocomplete="off" />
                        </div>

                    </div>

                    <div class="form-group">

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-key"></i>
                            </div>

                            <input type="password" class="form-control" name="_password" id="password" placeholder="wachtwoord" autocomplete="off" />
                        </div>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-login">
                            Login In
                            <i class="entypo-login"></i>
                        </button>
                    </div>

                    <!-- Implemented in v1.1.4 -->
                    {#<div class="form-group">
                        <em>- or -</em>
                    </div>#}

                    {#<div class="form-group">

